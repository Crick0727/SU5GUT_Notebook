  doi = {10.1103/PhysRevLett.90.021802},
  urldate = {2025-01-13},
  abstract = {KamLAND has been used to measure the flux of \${\textbackslash}bar\{{\textbackslash}nu\}\_e\$'s from distant nuclear reactors. In an exposure of 162 ton\${\textbackslash}cdot\$yr (145.1 days) the ratio of the number of observed inverse \${\textbackslash}beta\$-decay events to the expected number of events without disappearance is \$0.611{\textbackslash}pm 0.085 \{{\textbackslash}rm (stat)\} {\textbackslash}pm 0.041 \{{\textbackslash}rm (syst)\} \$ for \${\textbackslash}bar\{{\textbackslash}nu\}\_e\$ energies \${$>\$$} 3.4 MeV. The deficit of events is inconsistent with the expected rate for standard \${\textbackslash}bar\{{\textbackslash}nu\}\_e\$ propagation at the 99.95\% confidence level. In the context of two-flavor neutrino oscillations with CPT invariance, these results exclude all oscillation solutions but the `Large Mixing Angle' solution to the solar neutrino problem using reactor \${\textbackslash}bar\{{\textbackslash}nu\}\_e\$ sources.},
  archiveprefix = {arXiv},
  keywords = {High Energy Physics - Experiment,Nuclear Experiment},
  file = {/home/yasutoki/Zotero/storage/986EYAWD/Collaboration - 2003 - First Results from KamLAND Evidence for Reactor Anti-Neutrino Disappearance.pdf;/home/yasutoki/Zotero/storage/3AA3CZSY/0212021.html}
}

@article{salasStatusNeutrinoOscillations2018,
  title = {Status of Neutrino Oscillations 2018: First Hint for Normal Mass Ordering and Improved {{CP}} Sensitivity},
  shorttitle = {Status of Neutrino Oscillations 2018},
  author = {de Salas, P. F. and Forero, D. V. and Ternes, C. A. and Tortola, M. and Valle, J. W. F.},
  year = {2018},
  month = jul,
  journal = {Physics Letters B},
  volume = {782},
  eprint = {1708.01186},
  primaryclass = {hep-ph},
  pages = {633--640},
  issn = {03702693},
  doi = {10.1016/j.physletb.2018.06.019},
  urldate = {2025-01-13},
  abstract = {We present a new global fit of neutrino oscillation parameters within the simplest three-neutrino picture, including new data which appeared since our previous analysis{\textasciitilde}{\textbackslash}cite\{Forero:2014bxa\}. In this update we include new long-baseline neutrino data involving the antineutrino channel in T2K, as well as new data in the neutrino channel, data from NO\${\textbackslash}nu\$A, as well as new reactor data, such as the Daya Bay 1230 days electron antineutrino disappearance spectrum data and the 1500 live days prompt spectrum from RENO, as well as new Double Chooz data. We also include atmospheric neutrino data from the IceCube DeepCore and ANTARES neutrino telescopes and from Super-Kamiokande. Finally, we also update our solar oscillation analysis by including the 2055-day day/night spectrum from the fourth phase of the Super-Kamiokande experiment. With the new data we find a preference for the atmospheric angle in the upper octant for both neutrino mass orderings, with maximal mixing allowed at \${\textbackslash}Delta{\textbackslash}chi{\textasciicircum}2 = 1.6 {\textbackslash}, (3.2)\$ for normal (inverted) ordering. We also obtain a strong preference for values of the CP phase \${\textbackslash}delta\$ in the range \$[{\textbackslash}pi,2{\textbackslash}pi]\$, excluding values close to \${\textbackslash}pi/2\$ at more than 4\${\textbackslash}sigma\$. More remarkably, our global analysis shows for the first time hints in favour of the normal mass ordering over the inverted one at more than 3\${\textbackslash}sigma\$. We discuss in detail the origin of the mass ordering, CP violation and octant sensitivities, analyzing the interplay among the different neutrino data samples.},
  archiveprefix = {arXiv},
  keywords = {High Energy Physics - Experiment,High Energy Physics - Phenomenology},
  file = {/home/yasutoki/Zotero/storage/48W9SSGZ/Salas et al. - 2018 - Status of neutrino oscillations 2018 first hint for normal mass ordering and improved CP sensitivit.pdf;/home/yasutoki/Zotero/storage/CVLXWMIA/1708.html}
}
