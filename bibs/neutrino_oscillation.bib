@article{collaborationDirectEvidenceNeutrino2002,
  title = {Direct {{Evidence}} for {{Neutrino Flavor Transformation}} from {{Neutral-Current Interactions}} in the {{Sudbury Neutrino Observatory}}},
  author = {Collaboration, S. N. O.},
  year = {2002},
  month = jun,
  journal = {Physical Review Letters},
  volume = {89},
  number = {1},
  eprint = {nucl-ex/0204008},
  pages = {011301},
  issn = {0031-9007, 1079-7114},
  doi = {10.1103/PhysRevLett.89.011301},
  urldate = {2025-01-13},
  abstract = {Observations of neutral current neutrino interactions on deuterium in the Sudbury Neutrino Observatory are reported. Using the neutral current, elastic scattering, and charged current reactions and assuming the standard 8B shape, the electron-neutrino component of the 8B solar flux is 1.76 +/-0.05(stat.)+/-0.09(syst.) x10{\textasciicircum}6/(cm{\textasciicircum}2 s), for a kinetic energy threshold of 5 MeV. The non-electron neutrino component is 3.41+/-0.45(stat.)+0.48,-0.45(syst.) x10{\textasciicircum}6/(cm{\textasciicircum}2 s), 5.3 standard deviations greater than zero, providing strong evidence for solar electron neutrino flavor transformation. The total flux measured with the NC reaction is 5.09 +0.44,-0.43(stat.)+0.46,-0.43(syst.)x10{\textasciicircum}6/(cm{\textasciicircum}2 s), consistent with solar models.},
  archiveprefix = {arXiv},
  keywords = {High Energy Physics - Experiment,Nuclear Experiment},
  file = {/home/yasutoki/Zotero/storage/DN7TT2IQ/Collaboration - 2002 - Direct Evidence for Neutrino Flavor Transformation from Neutral-Current Interactions in the Sudbury.pdf;/home/yasutoki/Zotero/storage/6ICXBIAR/0204008.html}
}

@article{collaborationEvidenceOscillationAtmospheric1998,
